<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <div>
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <nav class="nav navbar-brand navbar-left">
          <span class="bookers">Bookers</span>
        </nav>
    <!--ログイン前、ログイン後の振り分け-->
    <nav>
    <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
    <li class="fas fa-home nav-link text-light">
      <%= link_to 'Home', user_path(current_user.id) %>
      </li>
      
      <li class="fas fa-users nav-link text-light">
       <%= link_to 'Users', users_path %>
      </li>
      
     <li class="fas fa-book-open nav-link text-light">
        <%= link_to 'Books', books_path %>
      </li>
      
      <li class="fas fa-sign-out-alt nav-link text-light">
        <%= link_to "logout", destroy_user_session_path, method: :delete %>
      </li>
      
      <% else %>
      
      <li class="fas fa-home nav-link text-light">
      <%= link_to 'Home', root_path(current_user) %>
      </li>
      
      <li class="fas fa-link nav-link text-light">
        <%= link_to 'about', home_about_path %>
      </li>
    
      <li class="fas fa-user-plus nav-link text-light">
        <%= link_to "sign up", new_user_registration_path %>
      </li>
      <li class="fas fa-sign-in-alt nav-link text-light">
        <%= link_to "login ", new_user_session_path %>
      </li>
    <% end %>
    </ul>
        </nav>
      </div>
    </header>
    <%= yield %>
    <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
</html
