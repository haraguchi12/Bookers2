<table>
    <tbody>
      <tr>
        <%= attachment_image_tag user, :profile_image, size: "100x100",format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>

      <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
  <% if current_user != @user %>
  <%= link_to 'チャットする', chat_path(@user.id) %>
  <% end %>

    </tbody>
  </table>
  <div class="row">
    <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
     <% end %>
     <% else %>
    <%= link_to '',edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
    <% end %>
  </div>
